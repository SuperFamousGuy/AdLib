<install type="component" version="1.5.0" method="upgrade">
	<name>VideoFlow</name>
	<author>Kirungi F. Fideri</author>
	<creationDate>2008-12-01</creationDate>
	<copyright>Copyright (C) 2008 - 2011 Kirungi F. Fideri. All Rights Reserved</copyright>

	 	</param>
	 	<param name="showrating" type="radio" default="1" label="Show Rating" description="Show/hide the media rating">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showdate" type="radio" default="1" label="Show Date" description="Show/hide the media date">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showadd" type="radio" default="1" label="Show Add to My List" description="Show/hide add to my list button">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showplaylistcount" type="radio" default="1" label="Show Playlist Adds" description="Show/hide the number of playlist adds">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showcommentcount" type="radio" default="1" label="Show Number of Comments" description="Show/hide the number of comments">

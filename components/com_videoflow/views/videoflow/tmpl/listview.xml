		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="showuser" type="radio" default="1" label="Show User" description="Show/hide the media owner">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showcat" type="radio" default="1" label="Show Category" description="Show/hide the category">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
 		</param>
 		<param name="showviews" type="radio" default="1" label="Show Views" description="Show/hide the number of media views">
	 		<option value="0">Hide</option>
	 		<option value="1">Show</option>
	 	</param>
	 	<param name="showdownloads" type="radio" default="1" label="Show Downloads" description="Show/hide the number of media downloads">

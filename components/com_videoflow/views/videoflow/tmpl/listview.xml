	 	</param>
	 	<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="likebutton" type="radio" default="1" label="Show Like Button" description="Show/hide the Facebook like button">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="likefaces" type="radio" default="true" label="Show Profile Photos" description="Show/hide profile photos below like button">
			<option value="false">Hide</option>
			<option value="true">Show</option>
		</param>
		<param name="likecolour" type="list" default="light" label="Like Button Colour" description="Like button colour scheme">
			<option value="light">Light</option>
			<option value="dark">Dark</option>
		</param>
		<param name="likelayout" type="list" default="standard" label="Like Button Layout" description="Layout and style of Facebook like button">
			<option value="standard">Standard</option>
			<option value="button_count">Button Count</option>
			<option value="box_count">Box Count</option>
		</param>
		<param name="listlikebutton" type="radio" default="0" label="Like Button on Media List" description="Not recommended. May slow your site down">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
	 	<param name="@spacer" type="spacer" default="" label="" description="" />
	 	<param name="borders" type="text" size="3" default="1" label="Border Size" description="Enter 0 for no borders" />
		<param name="iborders" type="text" size="3" default="4" label="Thumbnail Border Size" description="Enter 0 for no border" />
		<param name="iborderc" type="text" size="15" default="#EDEDED" label="Border Colour" description="Define border colour" />
		<param name="bgactive" type="text" size="15" default="#F6F6F6" label="Active Bg Colour" description="Define primary background colour" />
		<param name="bginactive" type="text" size="15" default="#EDEDED" label="Inactive Bg Colour" description="Define secondary background colour" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="tabthumbwidth" type="text" size="3" default="90" label="Tab Thumbnail Width" description="" />
		<param name="tabthumbheight" type="text" size="3" default="60" label="Tab Thumbnail Height" description="" />
